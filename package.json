{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "cd apps/web && pnpm dev",
    "dev:all": "turbo dev",
    "dev:watch": "turbo run dev:watch",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "clean:src": "find packages/shared/src -name '*.js' -o -name '*.d.ts' -o -name '*.d.ts.map' -delete",
    "lint:fix": "turbo run lint -- --fix",
    "shadcn": "turbo run add-shadcn-component --"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "catalog:build",
    "typescript": "catalog:types"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
