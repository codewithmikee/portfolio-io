  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:watch": "tsc --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "build": "tsc --build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "add-shadcn-component": "pnpm dlx shadcn@latest add"
  },
  "dependencies": {
    "@workspace/shared": "workspace:*",
    "@hookform/resolvers": "catalog:forms",
    "@radix-ui/react-accordion": "catalog:ui",
