    "@radix-ui/react-aspect-ratio": "catalog:ui",
    "@radix-ui/react-avatar": "catalog:ui",
    "@radix-ui/react-checkbox": "catalog:ui",
    "@radix-ui/react-collapsible": "catalog:ui",
    "@radix-ui/react-context-menu": "catalog:ui",
    "@radix-ui/react-dialog": "catalog:ui",
    "@radix-ui/react-dropdown-menu": "catalog:ui",
    "@radix-ui/react-hover-card": "catalog:ui",
    "@radix-ui/react-label": "catalog:ui",
    "@radix-ui/react-menubar": "catalog:ui",
    "@radix-ui/react-navigation-menu": "catalog:ui",
    "@radix-ui/react-popover": "catalog:ui",
    "@radix-ui/react-progress": "catalog:ui",
    "@radix-ui/react-radio-group": "catalog:ui",
    "@radix-ui/react-scroll-area": "catalog:ui",
    "@radix-ui/react-select": "catalog:ui",
    "@radix-ui/react-separator": "catalog:ui",
    "@radix-ui/react-slider": "catalog:ui",
    "@radix-ui/react-slot": "catalog:ui",
    "@radix-ui/react-switch": "catalog:ui",
    "@radix-ui/react-tabs": "catalog:ui",
    "@radix-ui/react-toggle": "catalog:ui",
    "@radix-ui/react-toggle-group": "catalog:ui",
    "@radix-ui/react-tooltip": "catalog:ui",
    "class-variance-authority": "catalog:styling",
    "clsx": "catalog:styling",
    "cmdk": "catalog:ui",
    "date-fns": "catalog:utils",
    "embla-carousel-react": "catalog:charts",
    "input-otp": "catalog:forms",
    "lucide-react": "catalog:ui",
    "next-themes": "catalog:react",
    "react": "catalog:react",
    "react-day-picker": "^9.11.0",
    "react-dom": "catalog:react",
    "react-hook-form": "catalog:react",
    "react-resizable-panels": "catalog:react",
    "recharts": "^2.15.4",
    "sonner": "catalog:",
    "tailwind-merge": "catalog:styling",
    "tw-animate-css": "catalog:styling",
    "vaul": "catalog:ui",
    "zod": "catalog:forms"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "catalog:styling",
    "@turbo/gen": "catalog:",
    "@types/node": "catalog:types",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "tailwindcss": "catalog:styling",
    "typescript": "catalog:types"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    "./globals.css": "./src/styles/globals.css",
    "./postcss.config": "./postcss.config.mjs",
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "import": "./dist/hooks/*.js"
    }
  }
